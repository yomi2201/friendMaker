
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>質問した人</th>
      <th>回答した人</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.question %></td>
        <td><%= post.answer %></td>
        <td><%= post.user.name %></td>
        <td><%= post.target.name if post.target.present? %></td>
        <td><%= link_to 'Show', user_post_path(post.user, post) %></td>
        <td><%= link_to 'Edit', edit_user_post_path(post.user, post) %></td>
        <td><%= link_to 'Destroy', user_post_path(post.user, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path %>
